
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomePage</title>
    <style type="text/css">
        .txt {
            font-size: 20px;
            font-weight: bold;
            color: red;
            margin-left: 100px;
            margin-top: 20px;
            float: left;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="/Content/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="/Content/themes/icon.css">
    <link rel="stylesheet" type="text/css" href="/Content/demo.css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#top').css('height', $('#logo').css('height'));
            addNewTab();
        });


        function addNewTab() {
            $('.detalLink').click(function () {
                var text = $(this).text();
                var url = $(this).attr('url');
                var isEx = $('#tt').tabs('exists', text);
                if (isEx) {
                    $('#tt').tabs('select', text);
                    return;
                }
                $('#tt').tabs('add', {
                    title: text,
                    content: getUrl(url),
                    closable: true
                });
            });
        }


        function getUrl(url) {
            var str = '<iframe src="'+url+'" style="width:100%;height:100%" frameborder="0"></iframe>';
            return str;
        }
    </script>
</head>
<body class="easyui-layout">
    <div data-options="region:'north',border:false" id="top" style="overflow:hidden;background:#B3DFDA;padding:10px;background-image:url(/Content/Images/bg3.png)">
        <img id="logo" src="/Content/Images/logo.gif" style="float:left" />
        <span class="txt">我的OA</span>
    </div>
    <div data-options="region:'west',split:true,title:'West'" style="width:150px;padding:3px;">
        <div class="easyui-accordion" style="width:auto;height:auto;">
            <div title="用户管理" data-options="iconCls:'icon-ok'" style="overflow:auto;padding:5px;">
                <a href="javascript:void(0)" class="detalLink" url="/UserInfo/Index">用户管理</a>
            </div>
            <div title="Help" data-options="iconCls:'icon-help'" style="padding:5px;">
                <a href="javascript:void(0)" class="detalLink" url="/RoleInfo/Index">角色管理</a>
            </div>

        </div>


    </div>
    <div data-options="region:'east',split:true,collapsed:true,title:'East'" style="width:100px;padding:10px;">east region</div>
    <div data-options="region:'south',border:false" style="height:50px;background:#A9FACD;padding:10px;">south region</div>
    <div data-options="region:'center',title:'Center'">
        <div id="tt" class="easyui-tabs" style="width:700px;height:250px" fit="true">
            
        </div>
    </div>
</body>

</html>
